@namespace DrBlazor
@inherits DrComponentBase

<DrDialog @ref="_dialog" Dismissible>
    <h4 class="headline-medium" style="margin-bottom: 24px;">
        Dialog Title
    </h4>

    <p class="body-large">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Iusto nam necessitatibus officiis
        blanditiis odio ducimus voluptas dolor optio doloremque.
    </p>

    <DrFlex JustifyContent="space-between">
        <DrTooltip>
            <DrTooltipContent>
                This tooltip is to inform that this button is to close the dialog
            </DrTooltipContent>
            <ChildContent>
                <DrButtonText Text="Close Dialog" OnClick="ToggleDialog">
                </DrButtonText>
            </ChildContent>
        </DrTooltip>

        <DrPopover @ref="_popover" Margin="10" FlipToFit DisableArrow Direction="Direction.Top">
            <DrContainer>
                <div style="max-width: 280px;">
                    <h4>Basic dialog title</h4>
                    <p>
                        A dialog is a type of modal window that appears in front of app content
                        to provide critical information or prompt for a decision to be made.
                    </p>
                    <DrTooltip>
                        <DrTooltipContent>
                            A nested tooltip inside the popover
                        </DrTooltipContent>
                        <ChildContent>
                            Hover it to show a tooltip
                        </ChildContent>
                    </DrTooltip>
                </div>
            </DrContainer>
        </DrPopover>

        <DrButtonText @ref="_button" Text="Open Popover" OnClick="TogglePopover">
        </DrButtonText>
    </DrFlex>
</DrDialog>

<DrButton OnClick="ToggleDialog">
    Open Dialog
</DrButton>
