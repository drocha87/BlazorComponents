@namespace DrBlazor
@inherits DrComponentBase

<DrPopover @bind-Open="_open"
         GetControl="@(() => _ref)"
         FlipToFit
         DisableArrow
         Direction="Direction.Top"
         Margin="8">
    <div class="dr-tooltip dr-text-body-medium">
        @DrTooltipContent
    </div>
</DrPopover>

