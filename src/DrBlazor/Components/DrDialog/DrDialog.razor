@namespace DrBlazor
@inherits DrComponentBase

<DrTeleport To="#app" Disabled="@(!Open)">
    @if (Dismissible)
    {
        <div class="dr-overlay black" @onclick="@Close" style="opacity: 32%;">
        </div>
    }
    <div @ref="Ref" @attributes="_attributes">
        @ChildContent
    </div>
</DrTeleport>