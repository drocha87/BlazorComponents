@page "/"

@using Drocha.Blazor.Components.Popover
@using Drocha.Blazor.Components.Tooltip

<PageTitle>Index</PageTitle>

<Popover @bind-Open="_open"
         GetControl="@(() => _ref)"
         Margin="10"
         FlipToFit
         DisableArrow
         Direction="Direction.Top">
    <div style="max-width: 280px;">
        <h4>Basic dialog title</h4>
        <p>
            A dialog is a type of modal window that appears in front of app content
            to provide critical information or prompt for a decision to be made.
        </p>
        <div>

        </div>
    </div>
</Popover>

<div>
    <h1 >Hello, world!</h1>
</div>

<Tooltip>
    <TooltipContent>
        This is a tooltip very nice!
    </TooltipContent>
    <ChildContent>
        <div>
            Welcome to your new app.
        </div>
    </ChildContent>
</Tooltip>

<SurveyPrompt Title="How is Blazor working for you?" />

<div style="display: flex; justify-content: start;">
    <button @ref="_ref" @onclick="@(() => _open = !_open)">Click Me</button>
</div>

@code {
    public ElementReference _ref;
    bool _open = false;
}

<style>
    .card {
        padding: 1rem;
        background-color: cyan;
    }
</style>